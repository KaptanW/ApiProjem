@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}


<table class="table table-bordered ">
    <thead>
        <tr>
            <th>#</th>
            <th>Personel İsmi</th>
            <th>Personel Ünvan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
            
                <td>@item.Name</td>
           
                <td>@item.Title</td>

                <td>
                    <a href="/Staff/DeleteStaff/@item.Id" class="btn btn-danger mr-2 text-light btn-rounded" style="color:white !important">Sil</a>
                    <a href="/Staff/AddorEditStaff/@item.Id" class="btn btn-success mr-2 text-light" style="color:white !important">Güncelle</a>
                    <a class="btn btn-dark text-light" style="color:white !important">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="/Staff/AddorEditStaff" class="btn btn-info" style="color:white">Yeni Personel Ekle</a>

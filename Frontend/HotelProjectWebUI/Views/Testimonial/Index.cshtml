@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdminLayout.cshtml";
}


<table class="table table-bordered ">
    <thead>
        <tr>
            <th>#</th>
            <th>Testimonial İsmi</th>
            <th>Testimonial Title</th>
            <th>Testimonial Açıklaması</th>
            <th>Testimonial Resmi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>

                <td>@item.Name</td>

                <td>@item.Title</td>

                <td>@item.Description</td>

                <td>@item.Image</td>

                <td>
                    <a href="/Testimonial/DeleteTestimonial/@item.Id" class="btn btn-danger mr-2 text-light btn-rounded" style="color:white !important">Sil</a>
                    <a href="/Testimonial/AddorEditTestimonial/@item.Id" class="btn btn-success mr-2 text-light" style="color:white !important">Güncelle</a>
                    <a class="btn btn-dark text-light" style="color:white !important">Detaylar</a>
                </td>
            </tr>
        }
    </tbody>
</table>


<a href="/Testimonial/AddorEditTestimonial" class="btn btn-info" style="color:white">Yeni Personel Ekle</a>
